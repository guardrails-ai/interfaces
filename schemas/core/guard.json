{
  "$id": "https://raw.githubusercontent.com/guardrails-ai/interfaces/v0.5.0-final-cut/schemas/core/guard.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Guard",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier for the Guard.",
      "format": "kebab-case"
    },
    "name": {
      "type": "string",
      "description": "The name for the Guard."
    },
    "description": {
      "type": "string",
      "description": "A description that concisely states the expected behaviour or purpose of the Guard."
    },
    "validators": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ValidatorReference"
      }
    },
    "output_schema": {
      "$ref": "https://json-schema.org/draft/2020-12/schema"
    },
    "history": {
        "type": "array",
        "items": {
          "$ref": "https://raw.githubusercontent.com/guardrails-ai/interfaces/v0.5.0-final-cut/schemas/core/call.json"
        },
        "readOnly": true
    }
  },
  "required": [
    "id",
    "name"
  ],
  "$defs": {
    "ValidatorReference": {
      "title": "ValidatorReference",
      "type": "object",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/guardrails-ai/interfaces/v0.5.0-final-cut/schemas/core/args-and-kwargs.json"
        }
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for this Validator.  Often the hub id; e.g. guardrails/regex_match"
        },
        "on": {
          "description": "A reference to the property this validator should be applied against.  Can be a valid JSON path or a meta-property such as \"prompt\" or \"output\"",
          "anyOf": [
            {
              "type": "string",
              "enum": [
                "prompt",
                "instructions",
                "msg_history",
                "messages",
                "output"
              ],
              "description": "meta-property"
            },
            {
              "type": "string",
              "description": "JSON path to property; e.g. $.foo.bar"
            }
          ]
        },
        "onFail": {
          "type": "string",
          "enum": [
            "exception",
            "filter",
            "fix",
            "fix_reask",
            "noop",
            "reask",
            "refrain",
            "custom"
          ],
          "default": "noop"
        }
      },
      "required": [
        "id"
      ]
    }
  }
}