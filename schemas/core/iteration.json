{
  "$id": "https://raw.githubusercontent.com/guardrails-ai/interfaces/v0.5.0-final-cut/schemas/core/iteration.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Iteration",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier for this Call.  Can be used as an identifier for a specific execution of a Guard."
    },
    "index": {
      "type": "integer",
      "description": "The zero-based index of this iteration within the current Call."
    },
    "call_id": {
      "type": "string",
      "description": "The unique identifier for the Call that this iteration is a part of."
    },
    "inputs": {
      "$ref": "https://raw.githubusercontent.com/guardrails-ai/interfaces/v0.5.0-final-cut/schemas/core/inputs.json"
    },
    "outputs": {
      "$ref": "https://raw.githubusercontent.com/guardrails-ai/interfaces/v0.5.0-final-cut/schemas/core/outputs.json"
    }
  },
  "required": [
    "id",
    "index",
    "call_id"
  ]
}